<!DOCTYPE html>
<html>
<head>
  <title>TravelGo</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>



  <nav class="top-bar" data-topbar>
    <ul class="title-area">
      <li class="name">
        <h1><a href="/">TravelGo</a></h1>
      </li>
    </ul>
      <section class="top-bar-section">
    <!-- Right Nav Section -->
    <ul class="center-buttons">
      <li class="divider"></li>
      <li><a href="#"><%= link_to "New Bucket List", new_bucket_list_path%></a></li>
      <li class="divider"></li>
      <li><a href="#"><%= link_to "My Bucket Lists", bucket_lists_path %></a></li>
      <li class="divider"></li>
      <li><a href="#"><%= link_to "Explore", all_public_bucket_lists_path%></a></li>
      <li class="divider"></li>

      <li class="divider"></li>
    </ul>

      <ul class="right">
        <%- if current_user -%>
          <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
        <%- else -%>
          <li><%= link_to 'Sign Up', new_user_registration_path %></li>
          <li><%= link_to 'Sign In', new_user_session_path %></li>
        <%- end -%>
      </ul>
    </section>
  </div>
</nav>

  <%- flash.each do |key, value| -%>
    <div class="flash flash-<%= key %>">
      <%= value %>
    </div>
  <%- end -%>

  <div class="row">
    <div class="hero" id="japan-path">
      <div class="small-6 medium-4 large-4 text-center columns small-centered" id="search-area">
        <ul>
          <li>
            <a href="#">
              <%= form_tag adventures_path, method: :get do %>
              <%= text_field :q, params[:q], placeholder: "Find Adventure" %>
              <button type="submit" class="button">Find Adventure</button>
              <% end %>
            </a>
          </li>
        <ul>
      </div>
    </div>
    <div class="hero" >
      <div class="hero-row">
          <div class="small-6 medium-4 large-4 text-center columns small-centered">
            <%= yield %>
          </div>
      </div>
    </div>
  </div>

  <%= javascript_include_tag 'application' %>
  <%= yield :extra_footer %>
</body>
</html>
<%= link_to "My Bucket Lists", bucket_lists_path %>
