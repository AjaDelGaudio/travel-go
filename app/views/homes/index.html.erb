<div class="row hero">

  <div class="row">
    <div class="small-11 medium-6 columns small-centered text-center">

      <div class="row adventure-search-bar">
        <%= form_tag(search_adventures_path, method: "get") do %>
          <%= text_field_tag :q, params[:q], id: "search-bar",
            placeholder: "The world is your oyster... search it." %>
          <%= submit_tag "Find Adventure", class: "button" %>
        <% end %>
      </div>

    </div>
  </div>
</div>
