<div class="small-12 medium-10 large-8 columns small-centered new-adventure-area">
  <%= form_for @adventure do |f| %>

    <div class="form-inputs">
      <%= f.label :name %>
      <%= f.text_field :name, class: "transparent-form" %>

      <%= f.label :address %>
      <%= f.text_area :address, class: "transparent-form" %>

      <div id="map-container">
        <div id="map-canvas"></div>
      </div>

      <%= f.label :notes %>
      <%= f.text_area :notes, class: "transparent-form" %>

      <%= f.check_box :is_achieved %>
      <%= f.label "I've already been here/done this" %>
    </div>

    <div class="form-actions">
      <%= f.submit "Add to Bucket List!", class: "button" %>
    </div>
  <% end %>
