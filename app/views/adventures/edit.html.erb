<div class="row">
  <div class="small-11 medium-6 columns small-centered">

    <h3 class="form-title">Edit Adventure</h3>

    <div class="text-right">
      <%= link_to (fa_icon "trash-o") + " Delete",
      adventure_path(@adventure), method: :delete %>
    </div>

    <%= form_for @adventure, url: edit_adventure_path(@adventure) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :address %>
      <%= f.text_area :address %>

      <%= f.label :link %>
      <%= f.text_area :link %>

      <%= f.fields_for :bucket_list_adventures do |ff| %>

        <%= ff.label :bucket_list_id %>
        <%= ff.collection_select(
          :bucket_list_id,
          @bucket_lists,
          :id,
          :title
          ) %>
      <% end %>

      <%= f.label :notes %>
      <%= f.text_area :notes %>

      <div class="text-center">
        <%= f.label :is_achieved, "Seen it!  Done it!"  %>
        <%= f.check_box :is_achieved %>

        <%= f.check_box :is_shared %>
        <%= f.label :is_shared, "Share it!"  %>
      </div>

      <div class="small-9 columns small-centered divinding-line"></div>

      <div class="form-actions text-center">
        <%= f.submit "Save It!", class: "button round" %>
      </div>
    <% end %>

  </div>
</div>
