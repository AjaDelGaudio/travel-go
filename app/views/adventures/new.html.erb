<div class="new-adventure-form-row">
  <div class="new-adventure-form small-11 medium-6 columns small-centered">
    <h4>Create a new adventure...</h4>

    <%= form_for @adventure do |f| %>
      <div>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :address, "Address" %>
        <%= f.text_area :address %>

        <%= f.label :link %>
        <%= f.text_area :link %>

        <%= f.fields_for :bucket_list_adventures do |ff| %>

          <%= ff.label :bucket_list_id %>
          <%= ff.collection_select(
            :bucket_list_id,
            @bucket_lists,
            :id,
            :title
            ) %>

        <% end %>

        <%= f.label :notes %>
        <%= f.text_area :notes %>

        <div class="check-boxes">
          <%= f.check_box :is_achieved %>
          <%= f.label :is_achieved, "Seen it!  Done it!"  %>

          <%= f.check_box :is_shared %>
          <%= f.label :is_shared, "Share it!"  %>
        </div>
      </div>

      <div class="form-actions text-center">
        <%= f.submit "Toss it in!", class: "button" %>
      </div>

    <% end %>
  </div>
</div>
