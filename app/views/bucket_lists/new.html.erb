<div class="form-row">
  <div class="form small-11 medium-6 columns small-centered">

    <%= form_for @bucket_list do |f| %>

      <%= f.label :title, "Group title:" %>
      <%= f.text_field :title %>

      <%= f.label :description, "Description:" %>
      <%= f.text_area :description %>

      <div class="checkboxes bucket-list-wrap-is-public">
          <span>
            <%= f.label "Share it!" %>
            <%= f.check_box :is_public %>
          </span>
      </div>

      <%= f.submit "Save It!", class: "button" %>

    <% end %>
  </div>
</div>
