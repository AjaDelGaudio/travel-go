
    <%= form_for @bucket_list do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.check_box :is_public %>
      <%= f.label "Share it!" %>

      <%= f.submit "Create!", class: "button" %>
    <% end %>
