<div class="row">
  <div class="small-11 medium-6 columns small-centered">

    <h3 class="form-title">Edit Bucket List</h3>

    <div class="text-right">
      <%= link_to (fa_icon "trash-o") + " Delete",
      bucket_list_path(@bucket_list), method: :delete %>
    </div>

    <%= form_for @bucket_list, url: edit_bucket_list_path(@bucket_list) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <div class="text-center">
        <%= f.check_box :is_public %>
        <%= f.label "Make public" %>
      </div>

      <div class="small-9 columns small-centered divinding-line"></div>

      <div class="form-actions text-center">
        <%= f.submit "Save It!", class: "button round" %>
      </div>
    <% end %>

  </div>
</div>
